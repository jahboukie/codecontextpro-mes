{
  "name": "codecontextpro-mes",
  "version": "1.3.1",
  "description": "CodeContextPro-MES: AI Memory Enhancement System - Persistent memory for AI coding assistants with SQLite + FTS5 search",
  "main": "dist/index.js",
  "bin": {
    "ccpro": "dist/cli.js",
    "codecontextpro": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:dev": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint src/**/*.ts --fix",
    "security:audit": "npm audit",
    "security:check": "npm run lint && npm run security:audit",
    "security:scan": "git diff --cached --name-only | xargs grep -l \"sk_\\|pk_live\\|AIza[0-9A-Za-z\\\\-_]{35}\" || echo \"No secrets detected\"",
    "deploy": "npm run build && npm run test",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "keywords": [
    "ai",
    "memory",
    "coding-assistant",
    "claude",
    "chatgpt",
    "sqlite",
    "fts5",
    "search",
    "cli",
    "developer-tools",
    "context",
    "persistent-memory",
    "local-first"
  ],
  "author": "CodeContext Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jahboukie/codecontextpro-mes.git"
  },
  "homepage": "https://github.com/jahboukie/codecontextpro-mes#readme",
  "bugs": {
    "url": "https://github.com/jahboukie/codecontextpro-mes/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0"
  }
}
