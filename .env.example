# CodeContextPro-MES Environment Variables Template
# Copy to .env and fill in your values
# Modern architecture - No Firebase/Stripe complexity!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
APP_VERSION=2.0.0
APP_NAME=CodeContextPro-MES

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite Database Path (relative to project root)
DATABASE_PATH=.codecontext/memory.db

# Database Encryption (optional - for enhanced security)
# Generate with: openssl rand -hex 32
DATABASE_ENCRYPTION_KEY=your_32_character_hex_key_here_optional

# =============================================================================
# POLAR.SH LICENSING (Simple & Modern)
# =============================================================================

# Polar.sh Configuration (when ready to integrate)
# Get these from: https://polar.sh/dashboard
POLAR_ACCESS_TOKEN=polar_oat_lSGjZvOrK7njjRG1rn9c3wEQtcbLFTbM6nPiV08HxOb
POLAR_ORGANIZATION_ID=a53fe212-c057-40fb-928a-9f3a31e18299

# =============================================================================
# SECURITY & PERFORMANCE
# =============================================================================

# Memory Engine Configuration
MEMORY_MAX_CONTENT_LENGTH=10000
MEMORY_MAX_RESULTS=100
MEMORY_ENABLE_ENCRYPTION=false

# Rate Limiting (for API routes)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug Logging
DEBUG_MEMORY_ENGINE=false
DEBUG_API_ROUTES=false
DEBUG_CLI_COMMANDS=false

# Development Features
ENABLE_DEV_TOOLS=true
ENABLE_API_DOCS=true

# =============================================================================
# OPTIONAL: FUTURE INTEGRATIONS
# =============================================================================

# When you're ready to add these features:
# ANTHROPIC_API_KEY=your_anthropic_key_for_ai_features
# OPENAI_API_KEY=your_openai_key_for_embeddings
# WEBHOOK_SECRET=your_webhook_secret_for_polar

